{
  "name": "@hexmon_tech/audit-sink-postgres",
  "version": "2.0.0",
  "private": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "migrations"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "test": "vitest --run --config ./vitest.config.ts",
    "lint": "eslint src --max-warnings 0",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "exports:check": "node ../../scripts/exports-check.mjs --package @hexmon_tech/audit-sink-postgres",
    "pack:check": "node ../../scripts/pack-check.mjs --package @hexmon_tech/audit-sink-postgres"
  },
  "dependencies": {
    "@hexmon_tech/audit-core": "workspace:*",
    "pg": "^8.12.0"
  },
  "devDependencies": {
    "@types/pg": "^8.15.4"
  },
  "description": "Postgres sink for audit event storage with idempotent inserts.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hexmon_tech/audit-log.git"
  },
  "keywords": [
    "audit",
    "logging",
    "postgres",
    "sink",
    "database"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
