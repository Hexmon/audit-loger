{
  "name": "@hexmon_tech/audit-core",
  "version": "2.0.0",
  "private": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "test": "vitest --run --config ./vitest.config.ts",
    "lint": "eslint src --max-warnings 0",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "exports:check": "node ../../scripts/exports-check.mjs --package @hexmon_tech/audit-core",
    "pack:check": "node ../../scripts/pack-check.mjs --package @hexmon_tech/audit-core"
  },
  "description": "Runtime-agnostic audit logger, schema, and reliability controls.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hexmon_tech/audit-log.git"
  },
  "keywords": [
    "audit",
    "logging",
    "compliance",
    "security",
    "observability",
    "typescript"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
